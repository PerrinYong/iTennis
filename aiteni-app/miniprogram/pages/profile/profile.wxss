/* pages/profile/profile.wxss */
.container {
  min-height: 100vh;
  background: #f5f5f5;
}

.custom-navbar {
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  padding: 20rpx;
  text-align: center;
}

.navbar-title {
  font-size: 36rpx;
  font-weight: bold;
  color: white;
}

/* 用户信息区域 */
.user-section {
  background: white;
  margin: 20rpx;
  border-radius: 20rpx;
  padding: 40rpx;
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.06);
}

.user-info {
  display: flex;
  align-items: center;
  position: relative;
}

.avatar {
  width: 120rpx;
  height: 120rpx;
  border-radius: 60rpx;
  margin-right: 30rpx;
  background: #eee;
}

.user-details {
  flex: 1;
  display: flex;
  flex-direction: column;
}

.nickname {
  font-size: 36rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 10rpx;
}

.level {
  font-size: 28rpx;
  color: #999;
}

.arrow {
  font-size: 50rpx;
  color: #999;
  font-weight: 300;
}

/* 功能菜单区域 */
.menu-section {
  background: white;
  margin: 20rpx;
  border-radius: 20rpx;
  overflow: hidden;
}

.menu-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 30rpx 40rpx;
  border-bottom: 1rpx solid #f0f0f0;
  background: white;
}

.menu-item:last-child {
  border-bottom: none;
}

.menu-item:active {
  background: #f8f8f8;
}

.menu-left {
  display: flex;
  align-items: center;
  flex: 1;
}

.menu-icon {
  font-size: 40rpx;
  margin-right: 24rpx;
}

.menu-title {
  font-size: 32rpx;
  color: #333;
}

.menu-right {
  display: flex;
  align-items: center;
}

.menu-right .arrow {
  font-size: 40rpx;
  color: #ccc;
}

/* 退出登录按钮 */
.logout-section {
  margin: 40rpx 20rpx 20rpx;
}

.logout-btn {
  width: 100%;
  height: 90rpx;
  line-height: 90rpx;
  background: white;
  color: #ff4444;
  font-size: 32rpx;
  border-radius: 20rpx;
  border: none;
}

.logout-btn::after {
  border: none;
}
