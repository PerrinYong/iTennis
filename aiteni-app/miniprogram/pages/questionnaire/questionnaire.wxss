/* pages/questionnaire/questionnaire.wxss */

/* 根容器（使用全局.page-container类） */
.page-container {
  height: 100vh;
  background: var(--bg-gray);
  box-sizing: border-box;
  display: flex;
  flex-direction: column;
  overflow: hidden;
}

/* 加载状态 */
.loading-container {
  display: flex;
  align-items: center;
  justify-content: center;
  height: 100%;
}

/* 问卷内容 */
.questionnaire-content {
  flex: 1;
  display: flex;
  flex-direction: column;
  overflow: hidden;
}

/* 固定顶部区域 */
.fixed-header {
  padding: 0 32rpx;
  background: var(--bg-gray);
  z-index: 10;
  flex-shrink: 0;
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.02); /* 极淡的阴影，区分层级 */
}

/* 可滚动答案区域 */
.scroll-answers {
  flex: 1;
  padding: 24rpx 32rpx 0;
  box-sizing: border-box;
  overflow-y: auto;
}

/* 底部占位，防止内容被固定按钮遮挡 */
.bottom-placeholder {
  height: 200rpx;
}

/* 进度条 */
.progress-bar-container {
  margin-bottom: 24rpx;
}

.progress-bar {
  width: 100%;
  height: 8rpx;
  background: var(--border-gray);
  border-radius: 999rpx;
  overflow: hidden;
  margin-bottom: 12rpx;
}

.progress-fill {
  height: 100%;
  background: linear-gradient(90deg, var(--primary-blue), var(--primary-blue-soft));
  border-radius: 999rpx;
  transition: width 0.3s ease;
}

.progress-text {
  font-size: 24rpx;
  color: var(--text-sub);
  display: block;
  text-align: right;
}

/* 问题头部区域（纯文本，无卡片背景） */
.question-header-area {
  margin-bottom: 0;
  padding-bottom: 24rpx;
  position: relative;
  z-index: 2;
}

.question-header {
  display: flex;
  align-items: center;
  justify-content: space-between;
  margin-bottom: 16rpx;
}

.question-title-group {
  display: flex;
  align-items: flex-end; /* 底部对齐，消除视觉落差 */
  gap: 16rpx;
  height: 60rpx; /* 固定高度 */
}

.question-number {
  font-size: 60rpx; /* 加大字号，增强存在感 */
  font-weight: 800;
  color: var(--primary-blue);
  line-height: 1;
  margin-bottom: -4rpx; /* 微调底部对齐 */
}

.question-tier {
  height: 40rpx;
  padding: 0 16rpx;
  font-size: 22rpx;
  border-radius: 8rpx;
  font-weight: 600;
  display: flex;
  align-items: center;
  justify-content: center;
  margin-bottom: 4rpx; /* 配合底部对齐 */
}

.tier-basic {
  background: linear-gradient(135deg, #10B981, #34D399);
  color: #FFFFFF;
}

.tier-advanced {
  background: linear-gradient(135deg, #F59E0B, #FBBF24);
  color: #FFFFFF;
}

.question-dimension {
  flex: 1;
  display: flex;
  justify-content: flex-end;
}

.dimension-tag {
  font-size: 22rpx;
}

.question-content {
  margin-bottom: 32rpx;
  min-height: 140rpx; /* 固定最小高度，防止抖动 (约2-3行文字高度) */
  display: flex;
  align-items: center; /* 文字垂直居中 */
}

.question-text {
  font-size: 36rpx; /* 加大题目文字 */
  font-weight: 600; /* 加粗题目文字 */
  line-height: 1.5;
  color: #111827; /* 更深的颜色 */
  display: block;
  width: 100%;
}

/* 选项列表 */
.options-list {
  display: flex;
  flex-direction: column;
  gap: 24rpx;
  background: var(--card-white);
  padding: 32rpx;
  border-radius: 32rpx;
  margin-top: 0;
  box-shadow: 0 16rpx 40rpx rgba(15, 23, 42, 0.08);
}

.option-item {
  display: flex;
  align-items: flex-start;
  gap: 24rpx;
  padding: 24rpx;
  border-radius: 20rpx;
  border: 2rpx solid var(--border-gray);
  transition: all 0.2s ease;
  background: #F8FAFC;
}

.option-item:active {
  transform: scale(0.98);
}

.option-item.selected {
  background: rgba(29, 124, 242, 0.05);
  border-color: var(--primary-blue);
  box-shadow: 0 8rpx 20rpx rgba(29, 124, 242, 0.15);
}

.option-radio {
  flex-shrink: 0;
  margin-top: 4rpx;
}

.radio-unchecked {
  width: 40rpx;
  height: 40rpx;
  border-radius: 50%;
  border: 3rpx solid var(--border-gray);
  background: var(--card-white);
}

.radio-checked {
  width: 40rpx;
  height: 40rpx;
  border-radius: 50%;
  background: var(--primary-blue);
  display: flex;
  align-items: center;
  justify-content: center;
  box-shadow: 0 4rpx 12rpx rgba(29, 124, 242, 0.4);
}

.radio-icon {
  font-size: 24rpx;
  color: #FFFFFF;
  font-weight: 700;
}

.option-content {
  flex: 1;
}

.option-text {
  font-size: 28rpx;
  line-height: 1.6;
  color: var(--text-main);
  display: block;
}

.option-item.selected .option-text {
  font-weight: 500;
  color: var(--primary-blue);
}

/* 固定底部导航栏 */
.fixed-bottom-nav {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  display: flex;
  gap: 16rpx;
  padding: 16rpx 32rpx;
  padding-bottom: calc(16rpx + constant(safe-area-inset-bottom));
  padding-bottom: calc(16rpx + env(safe-area-inset-bottom));
  background: var(--card-white);
  border-top: 1rpx solid var(--border-gray);
  box-shadow: 0 -4rpx 16rpx rgba(0, 0, 0, 0.04);
  z-index: 100;
}

.nav-btn {
  flex: 1;
}

.btn-primary.disabled,
.btn-primary[disabled] {
  background: #E5E7EB !important;
  color: #9CA3AF !important;
  box-shadow: none;
  opacity: 1;
}

/* 提示信息 */
.hint-text {
  display: flex;
  align-items: center;
  justify-content: center;
  gap: 8rpx;
  padding: 24rpx;
  font-size: 24rpx;
  color: var(--text-sub);
  text-align: center;
}

.hint-icon {
  font-size: 32rpx;
}
