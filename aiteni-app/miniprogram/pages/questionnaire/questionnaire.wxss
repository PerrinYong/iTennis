/* pages/questionnaire/questionnaire.wxss */

/* 根容器（使用全局.page-container类） */
.page-container {
  height: 100vh;
  background: #F5F7FA; /* 更柔和的灰底 */
  box-sizing: border-box;
  display: flex;
  flex-direction: column;
  overflow: hidden;
}

/* 加载状态 */
.loading-container {
  display: flex;
  align-items: center;
  justify-content: center;
  height: 100%;
}

.loading {
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 24rpx;
}

.loading-spinner {
  width: 60rpx;
  height: 60rpx;
  border: 6rpx solid #E5E7EB;
  border-top-color: var(--primary-blue);
  border-radius: 50%;
  animation: spin 1s linear infinite;
}

@keyframes spin {
  to { transform: rotate(360deg); }
}

.loading-text {
  font-size: 28rpx;
  color: var(--text-sub);
}

/* 问卷内容 */
.questionnaire-content {
  flex: 1;
  display: flex;
  flex-direction: column;
  overflow: hidden;
}

/* 固定顶部区域 */
.fixed-header {
  padding: 0 40rpx;
  background: #F5F7FA;
  z-index: 10;
  flex-shrink: 0;
  transition: all 0.3s ease;
}

/* 可滚动答案区域 */
.scroll-answers {
  flex: 1;
  padding: 10rpx 40rpx 0;
  box-sizing: border-box;
  overflow-y: auto;
}

/* 底部占位，防止内容被固定按钮遮挡 */
.bottom-placeholder {
  height: 240rpx;
}

/* 进度条 */
.progress-bar-container {
  margin-bottom: 32rpx;
  display: flex;
  align-items: center;
  gap: 20rpx;
}

.progress-bar {
  flex: 1;
  height: 12rpx;
  background: #E2E8F0;
  border-radius: 999rpx;
  overflow: hidden;
}

.progress-fill {
  height: 100%;
  background: var(--primary-blue);
  border-radius: 999rpx;
  transition: width 0.4s cubic-bezier(0.4, 0, 0.2, 1);
  box-shadow: 0 2rpx 8rpx rgba(29, 124, 242, 0.3);
}

.progress-text {
  font-size: 26rpx;
  font-weight: 600;
  color: var(--text-sub);
  width: 100rpx;
  text-align: right;
  font-feature-settings: "tnum";
}

/* 问题头部区域 */
.question-header-area {
  margin-bottom: 0;
  padding-bottom: 24rpx;
  position: relative;
  z-index: 2;
}

.question-header {
  display: flex;
  align-items: center;
  justify-content: space-between;
  margin-bottom: 24rpx;
}

.question-title-group {
  display: flex;
  align-items: center;
  gap: 20rpx;
}

.question-number {
  font-size: 56rpx;
  font-weight: 800;
  color: var(--primary-blue);
  line-height: 1;
  font-family: -apple-system, BlinkMacSystemFont, "Segoe UI", Roboto, Helvetica, Arial, sans-serif;
  letter-spacing: -2rpx;
}

.question-tier {
  height: 44rpx;
  padding: 0 20rpx;
  font-size: 24rpx;
  border-radius: 22rpx;
  font-weight: 600;
  display: flex;
  align-items: center;
  justify-content: center;
  transform: translateY(4rpx);
}

.tier-basic {
  background: rgba(16, 185, 129, 0.1);
  color: #059669;
}

.tier-advanced {
  background: rgba(245, 158, 11, 0.1);
  color: #D97706;
}

.dimension-tag {
  font-size: 24rpx;
  padding: 8rpx 20rpx;
  background: #EFF6FF;
  color: var(--primary-blue);
  border-radius: 12rpx;
  font-weight: 500;
}

.question-content {
  margin-bottom: 32rpx;
  min-height: 120rpx;
  display: flex;
  align-items: flex-start;
}

.question-text {
  font-size: 38rpx;
  font-weight: 700;
  line-height: 1.5;
  color: #1E293B;
  display: block;
  width: 100%;
  letter-spacing: 0.5rpx;
}

/* 选项列表 */
.options-list {
  display: flex;
  flex-direction: column;
  gap: 28rpx;
  /* 移除卡片背景，让选项独立浮动 */
  background: transparent; 
  padding: 0;
  margin-top: 10rpx;
  box-shadow: none;
}

.option-item {
  display: flex;
  align-items: flex-start;
  gap: 28rpx;
  padding: 32rpx;
  border-radius: 24rpx;
  background: #FFFFFF;
  border: 2rpx solid transparent;
  transition: all 0.25s cubic-bezier(0.4, 0, 0.2, 1);
  box-shadow: 0 4rpx 12rpx rgba(148, 163, 184, 0.08);
  position: relative;
  overflow: hidden;
}

.option-item:active {
  transform: scale(0.99);
  background: #F8FAFC;
}

.option-item.selected {
  background: #FFFFFF;
  border-color: var(--primary-blue);
  box-shadow: 0 8rpx 30rpx rgba(29, 124, 242, 0.15);
  transform: translateY(-2rpx);
}

/* 选中时的微弱背景填充 */
.option-item.selected::before {
  content: '';
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: var(--primary-blue);
  opacity: 0.03;
  pointer-events: none;
}

.option-radio {
  flex-shrink: 0;
  margin-top: 6rpx;
}

.radio-unchecked {
  width: 44rpx;
  height: 44rpx;
  border-radius: 50%;
  border: 3rpx solid #CBD5E1;
  background: #FFFFFF;
  transition: all 0.2s;
}

.option-item:active .radio-unchecked {
  border-color: #94A3B8;
}

.radio-checked {
  width: 44rpx;
  height: 44rpx;
  border-radius: 50%;
  background: var(--primary-blue);
  display: flex;
  align-items: center;
  justify-content: center;
  box-shadow: 0 4rpx 10rpx rgba(29, 124, 242, 0.4);
  animation: radioPop 0.3s cubic-bezier(0.175, 0.885, 0.32, 1.275);
}

@keyframes radioPop {
  0% { transform: scale(0.5); opacity: 0; }
  100% { transform: scale(1); opacity: 1; }
}

.radio-icon {
  font-size: 26rpx;
  color: #FFFFFF;
  font-weight: 800;
}

.option-content {
  flex: 1;
}

.option-text {
  font-size: 30rpx;
  line-height: 1.6;
  color: #334155;
  display: block;
}

.option-item.selected .option-text {
  color: #0F172A;
  font-weight: 500;
}

/* 固定底部导航栏 */
.fixed-bottom-nav {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  display: flex;
  gap: 24rpx;
  padding: 24rpx 40rpx;
  padding-bottom: calc(24rpx + constant(safe-area-inset-bottom));
  padding-bottom: calc(24rpx + env(safe-area-inset-bottom));
  background: rgba(255, 255, 255, 0.9);
  backdrop-filter: blur(10px);
  border-top: 1rpx solid rgba(226, 232, 240, 0.6);
  z-index: 100;
  box-shadow: 0 -4rpx 20rpx rgba(0, 0, 0, 0.03);
}

.nav-btn {
  flex: 1;
  height: 96rpx;
  border-radius: 48rpx;
  font-size: 32rpx;
  font-weight: 600;
  display: flex;
  align-items: center;
  justify-content: center;
  transition: all 0.2s;
}

.btn-secondary {
  background: #F1F5F9;
  color: #475569;
}

.btn-secondary:active {
  background: #E2E8F0;
}

.btn-primary {
  background: var(--primary-blue);
  color: #FFFFFF;
  box-shadow: 0 8rpx 20rpx rgba(29, 124, 242, 0.3);
}

.btn-primary:active {
  transform: translateY(2rpx);
  box-shadow: 0 4rpx 10rpx rgba(29, 124, 242, 0.2);
}

.btn-primary.disabled,
.btn-primary[disabled] {
  background: #E2E8F0 !important;
  color: #94A3B8 !important;
  box-shadow: none;
  opacity: 0.8;
  transform: none;
}

/* 提示信息 */
.hint-text {
  display: flex;
  align-items: center;
  justify-content: center;
  gap: 12rpx;
  padding: 40rpx 24rpx;
  font-size: 26rpx;
  color: #94A3B8;
  text-align: center;
}

.hint-icon {
  font-size: 32rpx;
}
