/* pages/welcome/welcome.wxss */

/* 根容器（使用全局.page-container类） */
.page-container {
  min-height: 100vh;
  background: linear-gradient(180deg, #F0F7FF 0%, var(--bg-gray) 50%);
  box-sizing: border-box;
}

/* 主内容 */
.welcome-content {
  padding: 0 32rpx 32rpx; /* 移除顶部padding，让标题与导航栏对齐 */
}

/* Hero区域 */
.hero-section {
  position: relative;
  margin-bottom: 32rpx;
  padding: 0 0 0rpx; /* 移除顶部padding，让标题紧贴导航栏 */
}

.hero-decoration {
  position: absolute;
  top: 0;
  right: 0;
  width: 200rpx;
  height: 200rpx;
  opacity: 0.15;
}

.hero-ball {
  position: absolute;
  top: 20rpx;
  right: 20rpx;
  width: 120rpx;
  height: 120rpx;
  border-radius: 50%;
  background: radial-gradient(circle at 30% 25%, #FFEFA3 0, var(--tennis-yellow) 52%, #F4C938 100%);
}

.hero-court-line {
  position: absolute;
  bottom: 40rpx;
  left: 0;
  right: 0;
  height: 4rpx;
  background: var(--primary-blue);
}

.hero-text {
  position: relative;
  z-index: 1;
  margin-bottom: 32rpx;
}

.hero-title {
  display: block;
  font-size: 56rpx;
  font-weight: 700;
  line-height: 1.3;
  color: var(--text-main);
  margin-bottom: 16rpx;
  white-space: pre-line;
}

.hero-subtitle {
  display: block;
  font-size: 28rpx;
  color: var(--text-sub);
  line-height: 1.5;
}

.hero-features {
  display: flex;
  gap: 24rpx;
}

.feature-item {
  flex: 1;
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 8rpx;
  padding: 24rpx 12rpx;
  background: rgba(255, 255, 255, 0.6);
  border-radius: 16rpx;
  backdrop-filter: blur(10rpx);
}

.feature-icon {
  font-size: 48rpx;
}

.feature-text {
  font-size: 22rpx;
  color: var(--text-sub);
  text-align: center;
  white-space: nowrap;
}

/* NTRP介绍卡片 */
.ntrp-intro {
  margin-bottom: 20rpx;
}

.intro-header {
  margin-bottom: 16rpx;
}

.intro-content {
  display: flex;
  flex-direction: column;
  gap: 20rpx;
}

.intro-text {
  font-size: 26rpx;
  line-height: 1.6;
  color: var(--text-sub);
}

.level-examples {
  display: flex;
  justify-content: space-between;
  gap: 12rpx;
}

.level-item {
  flex: 1;
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 12rpx;
}

.level-badge {
  width: 72rpx;
  height: 72rpx;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  box-shadow: 0 8rpx 20rpx rgba(0, 0, 0, 0.15);
}

.level-beginner {
  background: linear-gradient(135deg, #10B981, #34D399);
}

.level-amateur {
  background: linear-gradient(135deg, #3B82F6, #60A5FA);
}

.level-advanced {
  background: linear-gradient(135deg, #F59E0B, #FBBF24);
}

.level-pro {
  background: linear-gradient(135deg, #EF4444, #F87171);
}

.level-num {
  font-size: 28rpx;
  font-weight: 700;
  color: #FFFFFF;
}

.level-desc {
  font-size: 22rpx;
  color: var(--text-sub);
  text-align: center;
}

/* 评测说明 */
.test-info {
  margin-bottom: 24rpx;
}

.info-row {
  display: flex;
  align-items: center;
  gap: 20rpx;
  padding: 16rpx 0;
}

.info-row + .info-row {
  border-top: 1rpx solid var(--border-gray);
}

.info-icon {
  font-size: 48rpx;
  width: 60rpx;
  text-align: center;
}

.info-text {
  flex: 1;
  display: flex;
  flex-direction: column;
  gap: 4rpx;
}

.info-title {
  font-size: 28rpx;
  font-weight: 600;
  color: var(--text-main);
}

.info-desc {
  font-size: 24rpx;
  color: var(--text-sub);
}

/* 操作区域 */
.action-area {
  margin-top: 32rpx;
  margin-bottom: 32rpx;
}

.start-btn {
  display: flex;
  align-items: center;
  justify-content: center;
  gap: 12rpx;
}

.btn-arrow {
  font-size: 32rpx;
  font-weight: 700;
  transition: transform 0.2s ease;
}

.start-btn:active .btn-arrow {
  transform: translateX(4rpx);
}

.secondary-actions {
  display: flex;
  justify-content: center;
}

.btn-text {
  background: transparent;
  border: none;
  color: var(--primary-blue);
  font-size: 28rpx;
  font-weight: 500;
  padding: 24rpx 32rpx;
  display: inline-flex;
  align-items: center;
  gap: 8rpx;
  border-radius: 12rpx;
  transition: background-color 0.2s ease;
}

.btn-text:active {
  background: rgba(29, 124, 242, 0.08);
}
