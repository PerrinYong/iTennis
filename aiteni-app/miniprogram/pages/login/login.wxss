/* pages/login/login.wxss */
.login-container {
  min-height: 100vh;
  background: var(--bg-gray);
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 60rpx 40rpx 40rpx;
  box-sizing: border-box;
}

/* 头部 */
.header {
  text-align: center;
  margin-bottom: 60rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
}

.logo-box {
  width: 160rpx;
  height: 160rpx;
  background: #FFFFFF;
  border-radius: 40rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  margin-bottom: 32rpx;
  box-shadow: 0 16rpx 40rpx rgba(29, 124, 242, 0.1);
}

.app-logo {
  font-size: 80rpx;
  animation: bounce 2s infinite;
}

@keyframes bounce {
  0%, 100% { transform: translateY(0); }
  50% { transform: translateY(-10rpx); }
}

.app-name {
  font-size: 40rpx;
  font-weight: 700;
  color: var(--text-main);
  margin-bottom: 12rpx;
}

.app-desc {
  font-size: 26rpx;
  color: var(--text-sub);
}

/* 登录表单 */
.login-form {
  width: 100%;
  padding: 48rpx 32rpx;
  margin-bottom: 40rpx;
}

.form-item {
  margin-bottom: 40rpx;
}

.form-label {
  font-size: 28rpx;
  color: var(--text-main);
  font-weight: 600;
  margin-bottom: 20rpx;
}

/* 头像选择 */
.avatar-wrapper {
  width: 100%;
  padding: 20rpx 0;
  background: transparent;
  border: none;
  display: flex;
  flex-direction: column;
  align-items: center;
}

.avatar-wrapper::after { border: none; }

.avatar {
  width: 140rpx;
  height: 140rpx;
  border-radius: 50%;
  border: 4rpx solid var(--primary-blue);
  background-color: #F5F7FA;
  margin-bottom: 16rpx;
}

.avatar-tip {
  font-size: 24rpx;
  color: var(--text-sub);
}

/* 昵称输入 */
.nickname-wrapper {
  background: #F5F7FA;
  border-radius: 16rpx;
  padding: 0 24rpx;
  border: 2rpx solid transparent;
  transition: all 0.2s;
}

.nickname-wrapper:active {
  background: #EFF6FF;
  border-color: var(--primary-blue);
}

.nickname-input {
  height: 88rpx;
  font-size: 30rpx;
  color: var(--text-main);
}

.nickname-hint {
  font-size: 22rpx;
  color: var(--text-sub);
  margin-top: 12rpx;
}

/* 登录按钮 */
.login-btn {
  margin-top: 48rpx;
  width: 100%;
}

.login-btn.disabled {
  opacity: 0.6;
  background: var(--text-sub);
  box-shadow: none;
}

/* 用户协议 */
.agreement {
  margin-top: auto;
  text-align: center;
  padding-bottom: 40rpx;
}

.agreement-text {
  font-size: 24rpx;
  color: var(--text-sub);
}

.agreement-link {
  font-size: 24rpx;
  color: var(--primary-blue);
  font-weight: 500;
}

