/* pages/history/history.wxss */

/* 根容器（使用全局.page-container类） */
.page-container {
  min-height: 100vh;
  background: var(--bg-gray);
  box-sizing: border-box;
}

/* 内容区 */
.page-content {
  padding: 32rpx;
}

.empty-btn {
  width: 400rpx;
  margin-top: 40rpx;
}

/* 历史记录列表 */
.history-list {
  display: flex;
  flex-direction: column;
  gap: 16rpx;
}

.history-card {
  padding: 24rpx;
}

.history-card:active {
  transform: scale(0.98);
  transition: transform 0.1s ease;
}

.history-header {
  display: flex;
  align-items: center;
  justify-content: space-between;
  margin-bottom: 16rpx;
}

.history-level {
  display: flex;
  align-items: center;
  gap: 16rpx;
}

.level-badge {
  display: inline-flex;
  align-items: center;
  justify-content: center;
  width: 80rpx;
  height: 80rpx;
  border-radius: 50%;
  background: var(--tennis-yellow);
  font-size: 28rpx;
  font-weight: 700;
  color: var(--text-main);
  box-shadow: 0 8rpx 20rpx rgba(180, 137, 0, 0.3);
}

.level-label {
  font-size: 28rpx;
  font-weight: 600;
  color: var(--text-main);
}

.history-date {
  font-size: 24rpx;
  color: var(--text-sub);
}

.history-tags {
  display: flex;
  flex-wrap: wrap;
  gap: 12rpx;
  margin-bottom: 16rpx;
}

.history-footer {
  display: flex;
  justify-content: flex-end;
}

.view-detail {
  font-size: 26rpx;
  color: var(--primary-blue);
  font-weight: 500;
}
